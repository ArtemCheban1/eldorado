# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string

# Authentication
# JWT Secret - Generate a secure random string for production (e.g., using: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
